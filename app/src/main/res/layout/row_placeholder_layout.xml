<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/app_margin_small"
    >

    <View
        android:id="@+id/view_image"
        android:layout_width="@dimen/card_image_width"
        android:layout_height="0dp"
        android:background="@color/lightMediumGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/app_margin_medium"
        android:layout_marginTop="@dimen/app_margin_medium"
        android:layout_marginEnd="@dimen/app_margin_medium"
        android:background="@color/lightMediumGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_image"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view_description"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="@dimen/app_margin_medium"
        android:background="@color/lightMediumGray"
        app:layout_constraintEnd_toEndOf="@id/view_title"
        app:layout_constraintStart_toStartOf="@id/view_title"
        app:layout_constraintTop_toBottomOf="@id/view_title"
        />

    <View
        android:id="@+id/view_heart"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/card_margin_small"
        android:layout_marginTop="@dimen/app_margin_medium"
        android:layout_marginBottom="@dimen/app_margin_medium"
        android:background="@color/lightMediumGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_time"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/view_title"
        app:layout_constraintTop_toBottomOf="@id/view_description"
        />

    <View
        android:id="@+id/view_time"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/lightMediumGray"
        app:layout_constraintBottom_toBottomOf="@id/view_heart"
        app:layout_constraintEnd_toStartOf="@id/view_leaf"
        app:layout_constraintStart_toEndOf="@id/view_heart"
        app:layout_constraintTop_toTopOf="@id/view_heart"
        />

    <View
        android:id="@+id/view_leaf"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="@dimen/card_margin_small"
        android:background="@color/lightMediumGray"
        app:layout_constraintBottom_toBottomOf="@id/view_heart"
        app:layout_constraintEnd_toEndOf="@id/view_title"
        app:layout_constraintStart_toEndOf="@id/view_time"
        app:layout_constraintTop_toTopOf="@id/view_heart"
        />


</androidx.constraintlayout.widget.ConstraintLayout>